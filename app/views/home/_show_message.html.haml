- if button[:message].present?
  .col-md-12
    %p
      %b Bot's reply
    .tile-stats
      %textarea.textarea.form-control{onkeyup: "textAreaAdjust(this)", disabled: true}
        = button[:message]
- else
  .col-md-6.pull-left
    %p
      %b Bot's reply
    .tile-stats
      %textarea.textarea.form-control{onkeyup: "textAreaAdjust(this)", disabled: true}
        = button[:data][:message]